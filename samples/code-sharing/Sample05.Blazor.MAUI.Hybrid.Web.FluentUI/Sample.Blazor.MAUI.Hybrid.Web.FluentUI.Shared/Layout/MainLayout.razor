@using Microsoft.FluentUI.AspNetCore.Components.Icons.Regular
@inject IDialogService DialogService
@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader >
        AppBlazor.SharedCode.FluentUI
        <FluentSpacer />
        <FluentIcon
            Value="@(new Size20.DarkTheme())"
            Color="Color.FillInverse"
            OnClick="@ShowSettingsAsync"
            >
        </FluentIcon>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <ErrorBoundary>
                <ChildContent>
                    <div class="content">
                        @Body
                    </div>
                </ChildContent>
                <ErrorContent Context="ex">
                    <div class="blazor-error-boundary">@ex.Message</div>
                </ErrorContent>
            </ErrorBoundary>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter style="position:fixed; bottom:0; left:0; width:100%;">
        <a href="https://holisticware.net" target="_blank">HolisticWare</a>
        <FluentSpacer />
        <a href="https://ph4ct3x.holisticware.net" target="_blank">Ph4ct3x</a>
        <FluentSpacer />
        <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        <FluentSpacer />
        <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
    </FluentFooter>
</FluentLayout>

    
<FluentToastProvider />
@*
    used for SettingsDialog
*@ 
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />

@code 
{
    private async Task ShowSettingsAsync()
    {
        await DialogService.ShowPanelAsync<Pages.SettingsDialog>
                                        (
                                            new DialogParameters
                                            {
                                                Title = "Settings",
                                                Alignment = HorizontalAlignment.Right,
                                                SecondaryAction = null
                                            }
                                        );

        return;
    }

}